<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.seung.mapper.BoardMapper">

    <insert id="insert">
        insert into tbl_board (title, content, writer) values (#{title},#{content},#{writer})
    </insert>

    <select id="selectList" resultType="org.seung.domain.BoardVO">
        select * 
        from tbl_board 
        where bno > 0 
        order by bno desc 
        limit #{skip} , 10
    </select>
    
    <sql id="search">
    	<if test="keyword != null">
			<foreach collection="type" item="item" open=" and (" close=")" separator="or" >
				<if test="item eq 'T'.toString()">
				title like concat("%", #{keyword}, "%")
				</if>
				<if test="item eq 'C'.toString()">
				content like concat("%", #{keyword}, "%")
				</if>
				<if test="item eq 'W'.toString()">
				writer like concat("%", #{keyword}, "%")
				</if>
			</foreach>
		</if>
    </sql>
    
    <select id="searchList" resultType="org.seung.domain.BoardVO">
    	select * from tbl_board
		where bno > 0

		<include refid="search"></include>
		
		order by bno desc 
		limit #{skip} , #{amount}
    </select>

</mapper>